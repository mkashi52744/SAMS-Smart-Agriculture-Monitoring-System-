<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".About">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        app:itemBackground="@color/teal_200"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom"
        tools:ignore="MissingConstraints" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:background="@drawable/round"
            app:srcCompat="@drawable/logo2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:text="SAMS"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="210dp"
            android:textStyle="bold"
            android:text="Smart Agriculture Monitoring System is used to moniter condotion of your fields on your mobile easily from anywhere in the world.
It will provide Humidity, Temperature, Soil moisture and Water level of field and Weather information and we can remotely irrigate our fields from Home."
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="177dp"
            android:layout_marginLeft="177dp"
            android:layout_marginTop="350dp"
            android:text="Team"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="3dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/round1"
            android:layout_marginTop="400dp"
            app:srcCompat="@drawable/hamza1" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/round1"
            android:padding="3dp"
            app:srcCompat="@drawable/kashif1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="3dp"
            android:layout_marginLeft="243dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/round1"
            app:srcCompat="@drawable/hussnain1" />



        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="530dp"
            android:text="Hamza Rauf"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="530dp"
            android:text="Muhammad Kashif"
            android:textStyle="bold"
            android:textColor="#000000"
             />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="530dp"
            android:text="Hussnain Ali"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>